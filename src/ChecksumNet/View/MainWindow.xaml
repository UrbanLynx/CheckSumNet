<Window x:Class="ChecksumNet.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:toolkit="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:this="clr-namespace:ChecksumNet.ViewModel"
        Title="Checksum Net"
        DataContext="{x:Static this:MainViewModel.Instance}"
        WindowState="Maximized">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Menu>
            <MenuItem Header="File">
                <MenuItem Header="Open" />
            </MenuItem>
            <MenuItem Header="Help">
              <MenuItem Header="About Checksum Net"></MenuItem>
            </MenuItem>
        </Menu>
        <Label Grid.Row="1" Content="{Binding LabelText}"></Label>
    </Grid>
</Window>
